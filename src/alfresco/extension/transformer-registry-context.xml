<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <!-- Import the core transformer registry -->
    <import resource="classpath:alfresco/core-services-context.xml"/>
    
    <!-- Define the transformer registry bean -->
    <bean id="transformerRegistry" class="org.alfresco.repo.content.transform.ContentTransformerRegistry" 
          parent="baseContentTransformerRegistry">
        <property name="transformers">
            <list>
                <ref bean="transformer.PdfFix" />
            </list>
        </property>
    </bean>
</beans> 