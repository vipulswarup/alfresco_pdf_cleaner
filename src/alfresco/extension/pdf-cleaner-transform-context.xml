<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!-- Import Alfresco's core services -->
	<import resource="classpath:alfresco/core-services-context.xml"/>
	<import resource="classpath:alfresco/transformer-services-context.xml"/>

	<!-- Custom PDF Fix Transformer -->
	<bean id="transformer.PdfFix" class="org.alfresco.extension.transformer.CustomPdfFixTransformer">
		<property name="mimetypeService">
			<ref bean="mimetypeService" />
		</property>
		<property name="transformerConfig">
			<ref bean="transformerConfig" />
		</property>
		<property name="transformerDebug">
			<ref bean="transformerDebug" />
		</property>
	</bean>

	<!-- Register the transformer -->
	<bean id="transformer.PdfFix.registration" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject">
			<ref bean="transformerRegistry" />
		</property>
		<property name="targetMethod">
			<value>addTransformer</value>
		</property>
		<property name="arguments">
			<list>
				<ref bean="transformer.PdfFix" />
			</list>
		</property>
	</bean>
</beans>